<%-include("../../views/partials/user/header")%>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<style>
  .order-success {
    background-color: rgb(84, 84, 84);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    border-radius: 10px;
  }

  .order-summary {
    background-color: #D3B382;
  }

  .success-icon {
    font-size: 6rem;
    color: white; /* Green color */
    margin-right: 15px;
  }
</style>

<main class="main">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 text-center">
        <div class="alert order-success d-flex align-items-center">
          <i class="bi bi-check-circle-fill success-icon"></i>
          <div>
            <h1 class="fw-bold text-white">Order Placed Successfully!</h1>
            <p class="text-white">Thank you for shopping with us. Your order has been placed successfully.</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center mt-4">
      <div class="col-md-6 text-center">
        <a href="/shop" class="btn btn-lg" style="background-color: black; color: white;">Continue Shopping</a>
        <a href="/profile/orders" class="btn btn-lg ms-3" style="background-color: black; color: white;">View Order Details</a>
      </div>
    </div>
  </div>
</main>

<%-include("../../views/partials/user/footer")%>
