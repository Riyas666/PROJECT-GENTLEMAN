        </script>

<script>
  let index = 0;
  function showSlide() {
      document.querySelector('.carousel').style.transform = `translateX(-${index * 100}%)`;
  }
  function nextSlide() {
      index = (index + 1) % 4;
      showSlide();
  }
  function prevSlide() {
      index = (index - 1 + 4) % 4;
      showSlide();
  }
</script>
