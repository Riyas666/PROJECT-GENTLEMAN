  .main-image-container {
    width: 120%;
    height: 450px;
    margin-bottom: 20px;
    border: 1px solid #eee;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    cursor: zoom-in;
  }

  .main-image-container img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    transition: transform 0.3s ease;
  }

  .zoomed-image {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 150%;
    height: 150%;
    background-color: rgba(255, 255, 255, 0.5);
    background-repeat: no-repeat;
    background-size: 250%;
    display: none;
    pointer-events: none;
    z-index: 10;
  }

  .thumbnail-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px;
  }

  .thumbnail-image {
    aspect-ratio: 1;
    border: 2px solid #eee;
    border-radius: 6px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .thumbnail-image:hover {
    border-color: black;
    transform: translateY(-2px);
  }

  .thumbnail-image.active {
    border-color: black;
  }

  .thumbnail-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    padding: 5px;
  }

  /* Magnifying glass icon */
  .zoom-icon {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(255, 255, 255, 0.9);
    padding: 8px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 5;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .zoom-icon i {
    font-size: 16px;
    color: #666;
  }

  .size__link {
    padding: 5px 10px;
    border: 1px solid #ddd;
    margin-right: 5px;
    text-decoration: none;
    color: #333;
    cursor: pointer;
  }

  .size__link.size-active {
    background-color: #333;
    color: #fff;
    border-color: #333;
  }
  @media (max-width: 992px) {
    .zoomed-image {
      display: none !important;
    }

    .main-image-container {
      height: 350px;
    }
  }
  
