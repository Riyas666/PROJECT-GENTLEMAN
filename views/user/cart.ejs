  <script src="/js/main.js"></script>

  <script>

    /////////////////////UPDATE TEH STOCK///////////////////////
    
    function updateStock(productId, change) {
  const quantityInput = document.getElementById(`quantity-${productId}`);
  const quantityWrapper = document.querySelector(`[data-product-id="${productId}"]`);

  if (!quantityInput || !quantityWrapper) return;

  const maxStock = parseInt(quantityWrapper.getAttribute("data-stock"), 10);
  const maxLimit = 5;
  let currentQuantity = parseInt(quantityInput.value, 10);
  const newQuantity = currentQuantity + change;

  if (newQuantity < 1) {
    Notiflix.Notify.warning("Minimum quantity is 1", {
    timeout: 3000,           
    position: 'right-top',       
    clickToClose: true,           
    cssAnimationStyle: 'zoom',   
    fontSize: '16px',          
    borderRadius: '10px',        
    showOnlyTheLastOne: true,     
  });
      
      return;
    }

  if (newQuantity > maxLimit) {
    Notiflix.Notify.warning(`You can only add up to ${maxLimit} items of this product.`, {
      timeout: 3000,           
    position: 'right-top',       
    clickToClose: true,           
    cssAnimationStyle: 'zoom',   
    fontSize: '16px',          
    borderRadius: '10px',        
    showOnlyTheLastOne: true,
    });
    return;
  }

  if (newQuantity > maxStock) {
    Notiflix.Notify.failure(`Not enough stock available. Only ${maxStock} items in stock.`, {
      timeout: 2000,
      position: "right-top",
    });
    return;
  }

  quantityInput.value = newQuantity;
  const row = quantityWrapper.closest("tr");
  const subtotalElement = row.querySelector(".subtotal");
  const pricePerItem = parseFloat(row.querySelector(".table__price").textContent.replace("₹", ""));
  subtotalElement.textContent = `₹${(pricePerItem * newQuantity).toFixed(2)}`;

  updateCartOnServer(productId, newQuantity);
}


////CART AUTOMATIC UPDATION////
function updateCartOnServer(productId, newQuantity) {
  fetch("/cart/update", {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
    },
    body: JSON.stringify({ productId, quantity: newQuantity }),
  })
    .then((response) => response.json())
    .then((data) => {
      if (data.success) {
        Notiflix.Notify.success("Cart updated successfully!", {
          timeout: 3000,             
    position: 'right-top',       
    clickToClose: true,           
    cssAnimationStyle: 'zoom',   
    fontSize: '16px',            
    borderRadius: '10px',        
    showOnlyTheLastOne: true,
        });
       
      } else {
        Notiflix.Notify.failure(`Failed to update cart: ${data.error}`, {
          timeout: 3000,
          position: "right-top",
        });
      }
    })
    .catch((error) => {
      console.error("Error updating cart:", error);
      Notiflix.Notify.failure("Something went wrong. Please try again.", {
        timeout: 3000,
        position: "right-top",
      });
    });
}


  </script>
