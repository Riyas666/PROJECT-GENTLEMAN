    </div>
    

    <!-- Coupon Analysis -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Coupon Performance Analysis</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
