      alert('Failed to fetch order details.');
    });
}


function exportReport() {
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF();

    // Title
    doc.setFontSize(16);
    doc.text("Sales Report", 14, 15);

    // Table Headers
    const table = document.querySelector("#sales-report-body"); // Get table body
    const rows = table.querySelectorAll("tr");

    let tableData = [];
    let headers = ["Order Date", "Order ID", "Customer", "Products", "Order Status", "Net Amount", "Offer Discount", "Total Amount"];

    rows.forEach(row => {
        let columns = row.querySelectorAll("td");
        let rowData = [];

        columns.forEach(column => {
            rowData.push(column.innerText.trim());
        });

        tableData.push(rowData);
    });

    // Add table to PDF
    doc.autoTable({
        head: [headers], 
        body: tableData, 
        startY: 25, 
        theme: 'grid', 
        styles: { fontSize: 10 }, 
        headStyles: { fillColor: [0, 102, 204] } 
    });

    // Save the PDF
    doc.save("Sales_Report.pdf");
}


