                            <td>₹<%=order.discount.toLocaleString()%></td>
                            <td>₹<%=order.finalAmount.toLocaleString()%></td>
                            <td>
                                <button onclick="viewOrderDetails('<%=order._id%>')" class="btn btn-primary btn-sm">View</button>
                            </td>
                            
